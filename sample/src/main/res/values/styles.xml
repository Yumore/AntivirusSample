<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="animTranslate">
        <item name="android:windowEnterAnimation">@anim/animate_translate_in</item>
        <item name="android:windowExitAnimation">@anim/animate_translate_out</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_header_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
