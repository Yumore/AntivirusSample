<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/common_color_theme</item>
        <item name="colorPrimaryDark">@color/common_color_theme</item>
        <item name="colorAccent">@color/common_color_theme</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:listSelector">?android:listSelector</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">@dimen/common_text_size_normal</item>
        <item name="android:textColor">@color/common_color_black_light</item>
        <item name="android:textColorHint">@color/common_color_grey_dark</item>
        <item name="android:statusBarColor">@color/common_color_theme</item>
        <item name="android:navigationBarColor">@color/common_color_transparent</item>
        <item name="android:textCursorDrawable">@drawable/common_shape_cursor_theme</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:background">@drawable/common_shape_transparent</item>
        <item name="android:windowBackground">@drawable/common_shape_transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 解决TabLayout的Tab中text英文全部大写的问题 -->
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/common_text_size_middle</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>