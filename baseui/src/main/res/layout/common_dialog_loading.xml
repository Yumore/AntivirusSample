<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/black">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:minWidth="160dp"
        android:minHeight="120dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_padding_normal"
        android:paddingTop="@dimen/common_padding_large"
        android:paddingEnd="@dimen/common_padding_normal"
        android:paddingBottom="@dimen/common_padding_large">

        <ProgressBar
            android:id="@+id/loading_dialog_progress"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/loading_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_normal"
            android:gravity="center"
            android:textSize="@dimen/common_text_size_small_x"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="奋力加载中......"
            tools:visibility="visible" />
    </LinearLayout>
</RelativeLayout>